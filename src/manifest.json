{
	"manifest_version": 2,
	"name": "__MSG_extensionName__",
  "description": "__MSG_extensionDescription__",
	"version": "1.0",
	"homepage_url": "http://www.google.com",
	"default_locale": "en",
	"applications": {
	"gecko": {
		"strict_min_version": "58.0.1"
		}
	},
	"icons": {
  	"48": "/res/icons/icon.png",
  	"96": "/res/icons/icon@2x.png"
	},
	"browser_action": {
		"browser_style": true,
		"default_icon": {
    "16": "/res/icons/nBother_unabled-16.png",
    "32": "/res/icons/nBother_unabled-32.png"
  },
	"default_title": "__MSG_extensionName__",
	"theme_icons": [{
    "light": "/res/icons/nBother_unabled-16.png",
		"dark": "/res/icons/nBother_unabled-16.png",
		"size": 16
		},{
		"light": "/res/icons/nBother_unabled-32.png",
		"dark": "/res/icons/nBother_unabled-32.png",
		"size": 32
    }]
	},
	"background": {
  	"scripts": ["/js/background.js"]
	},
	"permissions": [
		"tabs",
    "storage",
		"browserSettings"
	]
}
