{
	"manifest_version": 2,
	"name": "__MSG_extensionName__",
  "description": "__MSG_extensionDescription__",
	"version": "1.0",
	"homepage_url": "https://github.com/jhonatasrm/nBother",
	"default_locale": "en",
	"icons": {
  	"48": "/res/icons/icon.png",
  	"96": "/res/icons/icon@2x.png"
	},
	"browser_action": {
		"browser_style": true,
		"default_icon": {
    "16": "/res/icons/nBother_unabled-16.png",
    "32": "/res/icons/nBother_unabled-32.png"
  },
	"default_title": "__MSG_extensionName__"
	},
	"background": {
  	"scripts": ["/js/background.js"]
	},
	"permissions": [
		"tabs",
		"browserSettings"
	]
}
