{
	"manifest_version": 2,
	"name": "__MSG_extensionName__",
	"description": "__MSG_extensionDescription__",
	"version": "1.9",
	"homepage_url": "https://github.com/jhonatasrm/nBother",
	"default_locale": "en",
	"author": "Jhonatas Rodrigues",
	"applications": {
		"gecko": {
			"strict_min_version": "58.0"
		}
	},
	"icons": {
		"48": "/res/icons/icon.png",
		"96": "/res/icons/icon@2x.png"
	},
	"browser_action": {
		"browser_style": true,
		"default_icon": {
			"16": "/res/icons/nBother_enabled-16.png",
			"32": "/res/icons/nBother_enabled-32.png"
		}
	},
	"background": {
		"scripts": ["/js/background.js"]
	},
	"options_ui": {
		"browser_style": false,
		"open_in_tab": true,
		"page": "html/preferences.html"
	},
	"permissions": [
		"tabs",
		"browserSettings",
		"activeTab",
		"contextMenus",
		"menus"
	]
}
